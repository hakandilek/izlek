<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="me.dilek.izlek.ui.activity.MainActivity">

    <!-- TvShowCatalogFragment -->

    <fragment
        android:id="@+id/f_tv_show_catalog"
        class="me.dilek.izlek.ui.fragment.TvShowCatalogFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/secondary_margin"
        android:layout_weight="1"
        tools:context="me.dilek.izlek.ui.activity.MainActivity_" />

    <!-- TvShowFragment -->

    <fragment
        android:id="@+id/f_tv_show"
        class="me.dilek.izlek.ui.fragment.TvShowFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context="me.dilek.izlek.ui.activity.MainActivity_" />

</LinearLayout>
